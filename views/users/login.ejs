<%layout("/layouts/boilerplates")%>
<div class="row mt-3">
    <h1 class="col-8 offset-5">logIn</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="from-label">Username</label>
                <input 
                    name="username" 
                    id="username"
                    type="text" 
                    class="form-control"
                    required 
                />
                <div class="invalid-feedback">Username should be valid</div>
            </div>
            <div class="mb-3">
                <label for="password" class="from-label">Password</label>
                <input 
                    name="password" 
                    id="password"
                    type="password" 
                    class="form-control"
                    required 
                />
                <div class="invalid-feedback">Password should be valid</div>
            </div>
            <button class="btn btn-success col-2 offset-5">login</button>
        </form>
    </div>
</div>