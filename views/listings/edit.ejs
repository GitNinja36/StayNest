<%layout("/layouts/boilerplates")%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit your listings</h2>
            <form 
                method="POST" 
                action="/listings/<%=listing._id%>?_method=PUT" 
                novalidate 
                class="needs-validation"
                enctype="multipart/form-data"
            >
            <div class="mb-3">
            <label for="title" class="from-label">Title</label>
            <input 
                name="listing[title]" 
                value="<%=listing.title%>" 
                type="text"
                class="form-control"
                required
            >
            <div class="invalid-feedback">Title location should be valid</div>
            </div>
            <div class="mb-3">
            <label for="description" class="from-label">Description</label>
            <textarea 
                name="listing[description]"  
                cols="70" 
                rows="10"
                class="form-control"
                required
            ><%= listing.description %></textarea>
            <div class="invalid-feedback">description should be short</div>
            </div>

            <div class="mb-3 ">
                <h6>original image <br></h6>
                <img src="<%= originalImageUrl %> " style="width: 100%; height: 100%; object-fit: cover;"/>
            </div>

            <div class="mb-3">
                <label for="image" class="from-label">Upload New Image</label>
                <input 
                    name="listing[image]" 
                    type="file"
                    class="form-control"
                    required
                />
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="from-label">Price</label>
                    <input 
                        name="listing[price]" 
                        value="<%=listing.price%>" 
                        type="text"
                        class="form-control"
                        required
                    >
                    <div class="invalid-feedback">price should be valid</div>
                    </div>
                    <div class="mb-3 col-md-4">
                    <label for="country" class="from-label">Country</label>
                    <input 
                        name="listing[country]" 
                        value="<%=listing.country%>" 
                        type="text"
                        class="form-control"
                        required
                    >
                    <div class="invalid-feedback">country name should be valid</div>
                    </div>
                </div>
            <div class="mb-3">
            <label for="location" class="from-label">Location</label>
            <input 
                name="listing[location]" 
                value="<%=listing.location%>" 
                type="text"
                class="form-control"
                required
            >
            <div class="invalid-feedback">location should be valid</div>
            </div>
            <br><br>
        <button class="btn btn-dark edit-btn mb-4">Edit</button>
        </form>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>